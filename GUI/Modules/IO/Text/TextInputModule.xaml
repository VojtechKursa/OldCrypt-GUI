<UserControl x:Class="OldCrypt_GUI.GUI.Modules.IO.Text.TextInputModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OldCrypt_GUI.GUI.Modules.IO.Text"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:TextModule x:Name="textModule" Grid.ColumnSpan="2"/>
        <Button x:Name="B_load" Content="Load" Margin="10,0,10,4" Click="B_load_Click" Height="38" VerticalAlignment="Bottom" FontSize="18"/>

    </Grid>
</UserControl>
