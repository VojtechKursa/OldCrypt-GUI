<UserControl x:Class="OldCrypt_GUI.GUI.Modules.ProgressModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OldCrypt_GUI.GUI.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="190" MinWidth="190" MinHeight="60">
    <Grid>
        <Label x:Name="l_progress"  Content="Progress:" VerticalAlignment="Top" Height="35" FontSize="18" HorizontalAlignment="Left" Width="110"/>
        <TextBox x:Name="tb_progress" HorizontalAlignment="Right" Height="31" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" TextAlignment="Right" FontSize="18" Background="{x:Null}" Focusable="False" IsTabStop="False" AllowDrop="False" IsReadOnly="True" Margin="0,4,0,0" Text="0 %" BorderBrush="{x:Null}"/>
        <ProgressBar x:Name="pb_progress" Margin="0,35,0,0" IsTabStop="False"/>
    </Grid>
</UserControl>
