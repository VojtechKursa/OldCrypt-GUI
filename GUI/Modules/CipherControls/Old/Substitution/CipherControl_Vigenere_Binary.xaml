             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OldCrypt_GUI.GUI.Modules.CipherControls"
             xmlns:Modules="clr-namespace:OldCrypt_GUI.GUI.Modules"
             x:Class="OldCrypt_GUI.GUI.Modules.CipherControls.CipherControl_Vigenere_Binary"
             mc:Ignorable="d" 
             d:DesignHeight="101.288" d:DesignWidth="178">
    <Grid>
        <local:Label_CipherName x:Name="mod_cipherName" Height="41" VerticalAlignment="Top"/>

        <Label Content="Key:" VerticalContentAlignment="Center" HorizontalAlignment="Left" FontSize="14" Margin="0,46,0,26"/>
